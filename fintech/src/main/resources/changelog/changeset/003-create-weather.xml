<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet id="create-city" author="Vitaliy">
        <createTable tableName="weather">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="temperature" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="weather_type_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="weather"
                                 baseColumnNames="weather_type_id"
                                 constraintName="fk_weather_type"
                                 referencedTableName="weather_type"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL" />
        <addForeignKeyConstraint baseTableName="weather"
                                 baseColumnNames="city_id"
                                 constraintName="fk_city"
                                 referencedTableName="city"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL" />
    </changeSet>
</databaseChangeLog>